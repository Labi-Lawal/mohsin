<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/fonts/material-icons.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/siteauth.css">
    
    <title>MOHSIN</title>
</head>
<body>
    <section class="body">
        <div class="logo">MOHSIN</div>
        <div class="form-box">
            <div>
                <input type="email" name="email" placeholder="Email">
            </div>
            <div>
                <input type="text" name="username" placeholder="Username">
            </div>
            <div>
                <input type="password" name="password" placeholder="Password">
            </div>
            
            <button type="submit" class="submit">CREATE NEW ACCOUNT</button>
        </div>
        <div class="signin">
            <div>Already have an account?</div>
            <button><a href="/signin/0">SIGN IN</a></button>
        </div>
    </section>

    <script src="/js/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            var userDetails = {
                email: $('input.email').val(),
                username: $('input.username').val(),
                password: $('input.password').val()
            };

            if(userDetails.email && userDetails.username && userDetails.password){
                $.ajax({
                    type:'POST',
                    url:'/createaccount',
                    dataType: 'json',
                    data: userDetails,
                    success: (data)=>{
                    },
                    error: (data)=>{
                    }
                });
            }
        });
    </script>
</body>
</html>
